{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "declarationDir": "packages/petals/dist",
    "outDir": "packages/petals/dist",
